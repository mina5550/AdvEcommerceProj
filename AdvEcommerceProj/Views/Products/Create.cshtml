@model AdvEcommerceProj.Models.Products

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Product</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="control-label"></label>
                <input type="text" asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input type="text" asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="catid" class="control-label">Category</label>
               <select asp-for="catid"class="form-control" asp-items="@ViewData["Category"] as SelectList" ></select>
                <span asp-validation-for="catid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sid" class="control-label">Supplier</label>
                <select asp-for="sid" asp-items="@ViewData["Supplier"] as SelectList" class="form-control"></select>
                <span asp-validation-for="sid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-success " />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"  class="btn btn-sm btn-default ">Back to List</a>
</div>

